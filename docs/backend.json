{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user in the system.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user entity."
        },
        "email": {
          "type": "string",
          "description": "Email address of the user.",
          "format": "email"
        }
      },
      "required": [
        "id",
        "email"
      ]
    },
    "Client": {
      "title": "Client",
      "type": "object",
      "description": "Represents a client of SK Traders.",
      "properties": {
        "contactName": { "type": "string" },
        "companyName": { "type": "string" },
        "contactEmail": { "type": "string", "format": "email" },
        "totalSales": { "type": "number" },
        "lastPurchaseDate": { "type": "string", "format": "date-time" },
        "country": { "type": "string" },
        "clientType": { "type": "string", "enum": ["local", "international"] }
      },
      "required": ["companyName", "contactName", "contactEmail", "clientType", "country"]
    },
    "Product": {
      "title": "Product",
      "type": "object",
      "description": "Represents a product in stock.",
      "properties": {
        "name": { "type": "string" },
        "quantity": { "type": "number" },
        "costPrice": { "type": "number" },
        "sellingPrice": { "type": "number" },
        "modifiedDate": { "type": "string", "format": "date-time" }
      },
      "required": ["name", "quantity", "costPrice", "sellingPrice"]
    },
    "FinancialTransaction": {
      "title": "Financial Transaction",
      "type": "object",
      "description": "Represents an income or expense transaction.",
      "properties": {
        "type": { "type": "string", "enum": ["income", "expense"] },
        "amount": { "type": "number" },
        "description": { "type": "string" },
        "date": { "type": "string", "format": "date-time" },
        "category": { "type": "string" },
        "clientName": { "type": "string" },
        "quantity": { "type": "number" }
      },
      "required": ["type", "amount", "description", "date", "category"]
    },
    "Export": {
      "title": "Export",
      "type": "object",
      "description": "Represents an export order.",
      "properties": {
        "clientId": { "type": "string" },
        "clientName": { "type": "string" },
        "productId": { "type": "string" },
        "destinationCountry": { "type": "string" },
        "destinationPort": { "type": "string" },
        "quantity": { "type": "number" },
        "price": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["To-do", "In Progress", "Completed"] },
        "paymentStatus": { "type": "string", "enum": ["Pending", "Paid"] },
        "invoiceNumber": { "type": "string" }
      },
      "required": ["clientId", "clientName", "productId", "quantity", "price", "date", "status", "paymentStatus", "invoiceNumber"]
    },
    "LocalSale": {
      "title": "Local Sale",
      "type": "object",
      "description": "Represents a local sale order.",
      "properties": {
        "clientId": { "type": "string" },
        "clientName": { "type": "string" },
        "productId": { "type": "string" },
        "quantity": { "type": "number" },
        "price": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "status": { "type": "string", "enum": ["To-do", "In Progress", "Completed"] },
        "paymentStatus": { "type": "string", "enum": ["Pending", "Paid"] },
        "invoiceNumber": { "type": "string" }
      },
      "required": ["clientId", "clientName", "productId", "quantity", "price", "date", "status", "paymentStatus", "invoiceNumber"]
    },
    "CoconutPurchase": {
      "title": "Coconut Purchase",
      "type": "object",
      "description": "Represents a purchase of coconuts.",
      "properties": {
        "clientId": { "type": "string" },
        "clientName": { "type": "string" },
        "quantity": { "type": "number" },
        "price": { "type": "number" },
        "date": { "type": "string", "format": "date-time" },
        "paymentStatus": { "type": "string", "enum": ["Pending", "Paid"] }
      },
      "required": ["clientId", "clientName", "quantity", "price", "date", "paymentStatus"]
    }
  },
  "auth": {
    "providers": [
      "password",
      "anonymous"
    ]
  },
  "firestore": {
    "/users/{userId}": {
      "schema": { "$ref": "#/entities/User" },
      "description": "Stores user profiles."
    },
    "/clients/{clientId}": {
      "schema": { "$ref": "#/entities/Client" },
      "description": "Stores client information."
    },
    "/products/{productId}": {
      "schema": { "$ref": "#/entities/Product" },
      "description": "Stores product stock information."
    },
    "/financial_transactions/{transactionId}": {
      "schema": { "$ref": "#/entities/FinancialTransaction" },
      "description": "Stores all financial transactions (income and expenses)."
    },
    "/exports/{exportId}": {
      "schema": { "$ref": "#/entities/Export" },
      "description": "Stores export order details."
    },
    "/local_sales/{saleId}": {
      "schema": { "$ref": "#/entities/LocalSale" },
      "description": "Stores local sale order details."
    },
    "/coconut_purchases/{purchaseId}": {
      "schema": { "$ref": "#/entities/CoconutPurchase" },
      "description": "Stores coconut purchase records."
    }
  }
}
