rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Users can only read and write their own documents.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }

    // Allow authenticated users to read and write specific collections
    // required for the transaction.
    match /products/{productId} {
      allow read, write: if request.auth != null;
    }
    
    match /coconut_purchases/{purchaseId} {
        allow read, write: if request.auth != null;
    }
    
    match /financial_transactions/{transactionId} {
        allow read, write: if request.auth != null;
    }

    // A permissive rule for all other documents for development.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
