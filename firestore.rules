     * @path /sales/{saleId}
     * @allow (get, list) Any signed-in user
     * @allow (create, update, delete) Admin, Manager, or Employee role
     * @deny (create, update, delete) Other users
     * @principle Restricts write access based on user role.
     */
    match /sales/{saleId} {
      allow get: if canRead();
      allow list: if canRead();
      allow create: if isAdminManagerOrEmployee();
      allow update: if isAdminManagerOrEmployee();
      allow delete: if isAdminManagerOrEmployee();
    }

    /**
     * @description Allows any signed-in user to read purchase documents.
