rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Grant universal read/write access to all authenticated users for all collections.
    // This is a permissive rule for development and prototyping.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }

    // Explicitly keep user profiles private.
    // A user can only read or write their own document.
    match /users/{userId} {
      allow read, write: if request.auth != null && request.auth.uid == userId;
    }
  }
}

    