/**
 * @file Firestore Security Rules
 * @description This ruleset enforces a strict ownership model for user data and applies role-based access control for other collections.
 *
 * Data Structure:
 * - `/users/{userId}`: Stores user profiles. User's `id` must match the `userId` in the path.
 * - `/clients/{clientId}`: Stores client information.
 * - `/products/{productId}`: Stores product information.
 * - `/stocks/{stockId}`: Stores stock information.
 * - `/sales/{saleId}`: Stores sale transaction data.
 * - `/purchases/{purchaseId}`: Stores purchase transaction data.
 * - `/receipts/{receiptId}`: Stores receipt data for sales and purchases.
 * - `/expenses/{expenseId}`: Stores expense records.
 * - `/exports/{exportId}`: Stores export order data.
 * - `/local_sales/{localSaleId}`: Stores local sale order data.
 * - `/financial_transactions/{transactionId}`: Stores financial transaction data.
 *
 * Key Security Decisions:
 * - Users can only read and write their own user document.
 * - Listing of users is disallowed.
 * - All other collections are currently open for read and write to any authenticated user.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Manages user profiles. Only the authenticated user can read/write their own profile.
     * @path /users/{userId}
     * @allow (create) User with ID 'user123' creates their profile.
     * @allow (get, update, delete) Authenticated user 'user123' reads/writes their own profile.
     * @deny (create) User with ID 'user456' attempts to create profile for 'user123'.
     * @deny (get, update, delete) User 'user456' attempts to read/write profile of 'user123'.
     * @principle Enforces document ownership for user profiles.
     */
    match /users/{userId} {
      function isOwner(userId) {
        return request.auth.uid == userId;
      }
      function isExistingOwner(userId) {
          return isOwner(userId) && resource != null;
      }

      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isOwner(userId) && request.resource.data.id == userId;
      allow update: if isExistingOwner(userId) && request.resource.data.id == resource.data.id;
      allow delete: if isExistingOwner(userId);
    }

    /**
     * @description Manages client information. Open access for authenticated users.
     * @path /clients/{clientId}
     * @allow (get, list, create, update, delete) Any authenticated user can perform any operation.
     * @principle Allows any authenticated user to manage client information.
     */
    match /clients/{clientId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages product information. Open access for authenticated users.
     * @path /products/{productId}
     * @allow (get, list, create, update, delete) Any authenticated user can perform any operation.
     * @principle Allows any authenticated user to manage product information.
     */
    match /products/{productId} {
      function isSignedIn() {
        return request.auth != null;
      }
      allow get, list: if isSignedIn();
      allow create, update, delete: if isSignedIn();
    }

    /**
     * @description Manages stock information. Open access for authenticated users.
     * @path /stocks/{stockId}
     * @allow (get, list, create, update, delete) Any authenticated user can perform any operation.
     * @principle Allows any authenticated user to manage stock information.
     */
    match /stocks/{stockId} {
