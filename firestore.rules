rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Generic read rule for all collections
    match /{collection}/{document} {
        allow get, list: if isSignedIn();
    }

    // Generic write rule for all collections, override for specific collections below
    match /{collection}/{document} {
        allow create, update, delete: if isSignedIn();
    }

    // Override generic rule for financial_transactions
    match /financial_transactions/{document} {
        allow get, list, create, update, delete: if false;
    }
  }
}