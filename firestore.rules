/**
 * @fileoverview Firestore Security Rules for SK Traders.
 *
 * Core Philosophy:
 * This ruleset enforces a role-based access control model. Users can read all data,
 * but writes are restricted based on their role (Admin, Manager, Employee) and document ownership.
 *
 * Data Structure:
 * - /users/{userId}: Stores user profile information, including roles.
 * - /clients/{clientId}: Stores client data.
 * - /products/{productId}: Stores product information.
 * - /stocks/{stockId}: Stores stock levels.
 * - /sales/{saleId}: Stores sale transactions.
 * - /purchases/{purchaseId}: Stores purchase transactions.
 * - /receipts/{receiptId}: Stores receipts related to sales and purchases.
 * - /expenses/{expenseId}: Stores expense records.
 * - /exports/{exportId}: Stores export order details.
 * - /local_sales/{localSaleId}: Stores local sale order details.
 * - /financial_transactions/{transactionId}: Stores financial transactions (income and expenses).
 *
 * Key Security Decisions:
 * - All data is readable by any authenticated user for reporting purposes, in order to provide visibility to all staff.
 * - User listing is not allowed.
 * - All write operations are only permitted for authenticated users with the role of admin, manager, or employee
 * - The rules are designed to be flexible on data shapes for prototyping purposes.
 *
 * Denormalization for Authorization:
 * - The user's role is denormalized into the /users/{userId} document to allow for efficient role-based access control.
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    /**
     * @description Checks if the user is signed in.
     */
    function isSignedIn() {
      return request.auth != null;
    }

    /**
     * @description Checks if the user's ID matches the requested user ID.
     */
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    /**
     * @description Checks if the user is an existing owner (signed in, owns the document, and the document exists).
     */
    function isExistingOwner(userId) {
        return isSignedIn() && isOwner(userId) && exists(/databases/$(database)/documents/users/$(userId));
    }

    /**
     * @description Allows any signed in user to read.
     */
    function canRead() {
        return isSignedIn();
    }

    /**
     * @description Checks if the user has the 'admin', 'manager', or 'employee' role.
     * @return {bool} True if user is admin, manager, or employee. False otherwise.
     */
    function isAdminManagerOrEmployee() {
        return isSignedIn() && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.role in ['admin', 'manager', 'employee'];
    }

   /**
    * @description
    *   Allows authenticated users to read their own user document.
    *   Allows the user to create their own document, validating that the `id` matches their `uid`.
    *   Does not allow updating or deleting a user document after creation.
    * @path /users/{userId}
    * @allow (get, list) User with matching UID
    * @allow (create) User with matching UID
    * @deny (update, delete) Any user
    * @principle Enforces document ownership and prevents unauthorized modifications.
    */
    match /users/{userId} {
      allow get: if isOwner(userId);
      allow list: if false;
      allow create: if isSignedIn() && isOwner(userId) && request.resource.data.id == request.auth.uid;
      allow update: if false;
      allow delete: if false;
    }

    /**
     * @description Allows any signed-in user to read client documents.
     * Allows admin, manager, or employee to create, update, or delete client documents.
     * @path /clients/{clientId}
     * @allow (get, list) Any signed-in user
     * @allow (create, update, delete) Admin, Manager, or Employee role
     * @deny (create, update, delete) Other users
     * @principle Restricts write access based on user role.
     */
    match /clients/{clientId} {
      allow get: if canRead();
      allow list: if canRead();
      allow create: if isAdminManagerOrEmployee();
      allow update: if isAdminManagerOrEmployee();
      allow delete: if isAdminManagerOrEmployee();
    }

    /**
     * @description Allows any signed-in user to read product documents.
     * Allows admin, manager, or employee to create, update, or delete product documents.
     * @path /products/{productId}
     * @allow (get, list) Any signed-in user
     * @allow (create, update, delete) Admin, Manager, or Employee role
     * @deny (create, update, delete) Other users
     * @principle Restricts write access based on user role.
     */
    match /products/{productId} {
      allow get: if canRead();
      allow list: if canRead();
      allow create: if isAdminManagerOrEmployee();
      allow update: if isAdminManagerOrEmployee();
      allow delete: if isAdminManagerOrEmployee();
    }

    /**
     * @description Allows any signed-in user to read stock documents.
     * Allows admin, manager, or employee to create, update, or delete stock documents.
     * @path /stocks/{stockId}
     * @allow (get, list) Any signed-in user
     * @allow (create, update, delete) Admin, Manager, or Employee role
     * @deny (create, update, delete) Other users
     * @principle Restricts write access based on user role.
     */
    match /stocks/{stockId} {
      allow get: if canRead();
      allow list: if canRead();
      allow create: if isAdminManagerOrEmployee();
      allow update: if isAdminManagerOrEmployee();
      allow delete: if isAdminManagerOrEmployee();
    }

    /**
